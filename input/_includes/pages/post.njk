---
layout: layouts/card-post.njk
---
{% set contentType = (page.filePathStem | getContentType ) %}
{% if contentType == "posts" %}

  {% set previousPost = collections.posts | getPreviousCollectionItem(page) %}
  {% set nextPost = collections.posts | getNextCollectionItem(page) %}

{% endif %}

{% if contentType == "snippets" %}

  {% set previousPost = collections.snippets | getPreviousCollectionItem(page) %}
  {% set nextPost = collections.snippets | getNextCollectionItem(page) %}

{% endif %}


<article>
  {{ content | safe }}
</article>

<aside class="card__aside">

  <div>

    <h3>Published</h3>
    <p>{{ date | postDate }}</p>

  </div>

  <div>
    <h3>Updated</h3>
    <p>{{ modified | postDate }}</p>
  </div>

  {% if contentType == "posts" %}
  <div class="categories">
    <h3>Category</h3>
      <a href="/categories/{{ category }}" class="capitalize pill">
        {{ category }}
      </a>
  </div>

  {% endif %}

  <div class="tags">
    <h3>Tags</h3>

    {% for tag in tags %}
      <a href="/tags/{{ tag }}" class="pill capitalize">
      {{ tag }}
      </a>
    {% endfor %}
  </div>

  <div>
    <h3>Links</h3>
    <div class="pagination">
    {% if previousPost %}
        
      <a href="{{ previousPost.url }}">Prev</a>
        
    {% endif %}
    {% if nextPost %}
        
      <a href="{{ nextPost.url }}">Next</a>
        
    {% endif %}
    </div>
  </div>

</aside>
