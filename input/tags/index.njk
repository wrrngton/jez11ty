---
title: post tags
description: post tags
layout: layouts/card.njk
---

{% set tagsArr = [] %}

{% for post in collections.posts %}

  {% for item in post.data.tags %}

    {% if item not in tagsArr %}

      {% set tagsArr = (tagsArr.push(item), tagsArr) %}

    {% endif %}

  {% endfor %}

{% endfor %}

{% for tag in tagsArr %}
<div class="mb-sm">

  <h2>{{ tag }}</h2>

  <ul class="flex flex-col">

  {% for post in collections[tag] %}

    {% include "components/list-item.njk" %}

  {% endfor %}

  </ul>

</div>

{% endfor %}
